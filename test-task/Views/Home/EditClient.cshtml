@model test_task.Models.Client
<head>
    <title>Изменение пользователя</title>
</head>
<h2>Изменение пользователя</h2>

<form asp-action="EditClient" asp-controller="Home"  asp-antiforgery="true">
    <div>
        @Html.HiddenFor(m=> m.Inn)
        <div>
            <label asp-for="Name">Имя</label>
            <input type="text" asp-for="Name"/>
        </div>
        <div>
            <label asp-for="BusinessType">Тип</label>
            <select asp-for="BusinessType" asp-items="Html.GetEnumSelectList<ClientType>()"></select>
        </div>
        <div>
            <input type="submit" value="Save"/>
        </div>
    </div>
</form>